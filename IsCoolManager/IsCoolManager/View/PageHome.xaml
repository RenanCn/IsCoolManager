<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IsCoolManager.View.PageHome" Title="Home">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Source="home.png" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                   HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>

            <Image Source="edit.png" Grid.Row="1" Grid.Column="0" VerticalOptions="End"/>
            <Image Source="search.png" Grid.Row="1" Grid.Column="1" VerticalOptions="End"/>

            <Label Text="Cadastrar" Grid.Row="2" Grid.Column="0" FontSize="Large" HorizontalOptions="Center" VerticalOptions="End"/>
            <Label Text="Localizar" Grid.Row="2" Grid.Column="1" FontSize="Large" HorizontalOptions="Center" VerticalOptions="End"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>